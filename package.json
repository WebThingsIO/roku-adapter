{
  "name": "roku-adapter",
  "display_name": "Roku",
  "version": "0.2.0",
  "description": "Roku adapter for Mozilla WebThings Gateway",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla-iot/roku-adapter.git"
  },
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "roku"
  ],
  "author": "Mozilla IoT",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla-iot/roku-adapter/issues"
  },
  "homepage": "https://github.com/mozilla-iot/roku-adapter#readme",
  "dependencies": {
    "ip-regex": "^4.1.0",
    "roku-client": "^3.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.4.0"
  },
  "files": [
    "LICENSE",
    "README.md",
    "SHA256SUMS",
    "index.js",
    "lib/roku-adapter.js",
    "lib/roku-device.js",
    "lib/roku-property.js",
    "manifest.json",
    "node_modules"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "devices": []
    },
    "schema": {
      "type": "object",
      "required": [
        "devices"
      ],
      "properties": {
        "devices": {
          "description": "List of IP addresses",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
